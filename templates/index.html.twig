{% extends 'base.html.twig' %}

{% block title %}Home!{% endblock %}

{% block body %}


    {% if error %}
    <h1>
        {{error.messageKey}}
    </h1>

    {% endif %}

<div class="container" style="margin-top:10%">
    <div class="row">
        <div class="col-4">
            <div class="float-right" style="padding-top:5%;padding-right:2%">
                
                <div class="row">
                    <a class="btn btn-primary " href="{{ path('logout') }}" style="margin-top:5%"> logout </a>
                </div>
                <div class="row"> 
                    <a class="btn btn-warning" href="{{ path('delete') }}" style="margin-top:5%"> Delete account</a>
                </div>
            </div>
        </div>
        <div style="border-left:1px solid #000;"></div>
        <div class="col-7">
            <h3>Logged in {{ app.user.username }}</h3>
            <div class="container" >
            {{ form_start(UpdateUserForm) }}
            {{ form_row(UpdateUserForm.username) }}
            {{ form_row(UpdateUserForm.email) }}  
            {{ form_row(UpdateUserForm.Currentpassword) }}
            {{ form_row(UpdateUserForm.password.first) }}
            {{ form_row(UpdateUserForm.password.second) }}
            <button class="btn btn-primary">Register</button>
            {{ form_end(UpdateUserForm) }}
            </div>
        </div>
    </div>

</div>




{% endblock %}
